{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "jsx": "preserve",
    "target": "es5",
    // "module": "commonjs",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
     "paths": {
      "@/*": ["*"]
      }
  },
  "exclude": ["node_modules"]
}
